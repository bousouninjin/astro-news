---
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMeta";
import { LOCALE_DIR, normalizeLocale } from "@/i18n/config";

type Props = {
  entry: Entry;
};

const { entry } = Astro.props;

const locale = normalizeLocale(Astro.currentLocale);
const meta = await getMeta(entry, undefined, locale);
---

<!doctype html>
<html lang={locale} dir={LOCALE_DIR[locale]}>
  <Head meta={meta} />
  <body class="flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
