---
import { categoriesHandler } from "@/lib/handlers/categories";
import { DEFAULT_LOCALE, LOCALES } from "@/i18n/config";
import { getEntrySlug } from "@/i18n/content";
import { localizePath } from "@/i18n/paths";

export const getStaticPaths = async () => {
  const locales = LOCALES.filter((entry) => entry !== DEFAULT_LOCALE);
  const paths = [];
  for (const locale of locales) {
    const categories = await categoriesHandler.allCategories(locale);
    paths.push(
      ...categories.map((category) => ({
        params: { locale, category: getEntrySlug(category) },
      }))
    );
  }
  return paths;
};

const { category } = Astro.params;
const locale = Astro.currentLocale ?? Astro.params.locale;
const categoryUrl = `${localizePath(locale, `/categories/${category}`)}/1`;
---

<!-- TODO: show last articles and fix pagination -->
<meta http-equiv="refresh" content={`0; url=${categoryUrl}`} />
