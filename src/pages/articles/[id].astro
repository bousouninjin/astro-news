---
import { render } from "astro:content";
import BaseLayout from "@/layouts/base.astro";
import ContentLayout from "@/layouts/content.astro";
import ArticleHeader from "./_components/article-header.astro";

import { articlesHandler } from "@/lib/handlers/articles";
import { DEFAULT_LOCALE } from "@/i18n/config";
import { getEntrySlug } from "@/i18n/content";

export const getStaticPaths = async () => {
  const articles = await articlesHandler.allArticles(DEFAULT_LOCALE);

  return articles.map((article) => ({
    params: { id: getEntrySlug(article) },
    props: { article },
  }));
};
const { article } = Astro.props;

const { Content, remarkPluginFrontmatter } = await render(article);
---

<BaseLayout entry={article}>
  <ArticleHeader
    article={article}
    readingTime={remarkPluginFrontmatter.minutesRead}
  />
  <ContentLayout>
    <Content />
  </ContentLayout>
</BaseLayout>
