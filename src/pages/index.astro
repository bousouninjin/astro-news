---
import BaseLayout from "@/layouts/base.astro";
import { getEntryBySlug } from "@/i18n/content";
import { localizePath } from "@/i18n/paths";
import Headlines from "@/pages/_home/headlines.astro";
import LatestNews from "@/pages/_home/latestNews.astro";
import Authors from "@/pages/_home/authors.astro";

const locale = Astro.currentLocale;
const entry = await getEntryBySlug("views", "home", locale);

if (!entry) {
  return Astro.redirect(localizePath(locale, "/404"));
}
---

<BaseLayout entry={entry}>
  <Headlines />
  <LatestNews />
  <Authors />
</BaseLayout>
